// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String?
  email         String   @unique
  password      String
  salary        Float?
  moneySaved    Float?
  earnings      Float?
  totalSpent    Float    @default(0)
  totalExpenses Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  spending Spending[]
  expenses Expenses[]
}

model Spending {
  id            String   @id @default(uuid())
  userId        String
  name          String
  institution   String
  paymentMethod String
  value         Float
  date          DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Expenses {
  id          String   @id @default(uuid())
  userId      String
  name        String
  institution String
  value       Float
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

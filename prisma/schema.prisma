// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  firstName     String
  lastName      String?
  email         String  @unique
  password      String
  salary        Float   @default(0)
  moneySaved    Float   @default(0)
  totalSpent    Float   @default(0)
  totalExpenses Float   @default(0)
  totalEarnings Float   @default(0)
  flagsId       String?

  flags    Flags?     @relation(fields: [flagsId], references: [id])
  spending Spending[]
  expenses Expenses[]
  earnings Earnings[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Spending {
  id            String   @id @default(uuid())
  userId        String
  name          String
  institution   String
  paymentMethod String
  value         Float
  date          DateTime
  categoriesId  String?

  category Categories? @relation(fields: [categoriesId], references: [id])
  user     User        @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Expenses {
  id           String   @id @default(uuid())
  userId       String
  name         String
  institution  String
  value        Float
  date         DateTime
  categoriesId String?

  category Categories? @relation(fields: [categoriesId], references: [id])
  user     User        @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Earnings {
  id          String   @id @default(uuid())
  userId      String
  name        String
  value       String
  institution String
  date        DateTime

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Flags {
  id    String @id @default(uuid())
  flags String

  user User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Categories {
  id   String @id @default(uuid())
  name String

  spending Spending[]
  expenses Expenses[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
